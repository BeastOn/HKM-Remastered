<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    card_view:cardBackgroundColor="@color/card_background"
    card_view:cardCornerRadius="4dp">

    <lb.themike10452.hellscorekernelmanagerl.CustomWidgets.CardHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/pref_category_cstates">

        <LinearLayout
            android:id="@+id/usefulContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:padding="3dp"
            android:showDividers="middle">

            <Switch
                android:id="@+id/c0_switch"
                style="@style/mSwitchStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/c0_state" />

            <Switch
                android:id="@+id/c1_switch"
                style="@style/mSwitchStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/c1_state" />

            <Switch
                android:id="@+id/c2_switch"
                style="@style/mSwitchStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/c2_state" />

            <Switch
                android:id="@+id/c3_switch"
                style="@style/mSwitchStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/c3_state" />
        </LinearLayout>
    </lb.themike10452.hellscorekernelmanagerl.CustomWidgets.CardHeader>
</android.support.v7.widget.CardView>