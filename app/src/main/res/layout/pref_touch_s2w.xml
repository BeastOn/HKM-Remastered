<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/s2wHolder"
    style="@style/clickableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            style="@style/buttonTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/value"
            android:labelFor="@+id/value"
            android:text="@string/pref_s2w" />

        <TextView
            android:id="@+id/value"
            style="@style/buttonDetailStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableBottom="@drawable/underline"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:padding="3dp" />

    </RelativeLayout>

    <TextView
        style="@style/buttonDetailStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/pref_summary_s2w" />
</LinearLayout>