<?xml version="1.0" encoding="utf-8"?>
<lb.themike10452.hellscorekernelmanagerl.CustomWidgets.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/osv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <lb.themike10452.hellscorekernelmanagerl.CustomWidgets.ObservableHorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:background="@color/background"
            android:elevation="0dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/preview1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/preview2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />


            </LinearLayout>
        </lb.themike10452.hellscorekernelmanagerl.CustomWidgets.ObservableHorizontalScrollView>

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <include
                layout="@layout/prefs_lcd_profiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />

            <include
                layout="@layout/prefs_lcd_kcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />

            <include
                layout="@layout/prefs_lcd_kgamma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />

            <include
                layout="@layout/prefs_lcd_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

</lb.themike10452.hellscorekernelmanagerl.CustomWidgets.ObservableScrollView>